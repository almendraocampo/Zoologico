{% extends 'base.html.twig' %}

{% block contenido %}

<h1>Listado de Animales</h1>

<table class = "table">

	<tr>
		<th>Codigo</th>
		<th>Nombre</th>
		<th>Peso</th>
		<th>Tipo</th>
		<th>Genero</th>
		<th>Fecha Nacimiento</th>
		<th>Sector</th>
		<th>Fecha Ingreso</th>
		<th>Fecha Defuncion</th>
		<th>Opciones</th>
	</tr>

	{% for animal in animales %}

	<tr>
		<th>{{ animal.getCodigo() }}</th>
		<th>{{ animal.getNombre() }}</th>
		<th>{{ animal.getPeso() }}</th>
		<th>{{ animal.getTipo().getNombre() }}</th>
		<th>{{ animal.getGenero() }}</th>
		<th>{{ animal.getFechaNacimiento() }}</th>
		<th>{{ animal.getSector().getNombre() }}</th>
		<th>{{ animal.getFechaIngreso() }}</th>
		<th>{{ animal.getFechaDefuncion() }}</th>
					<td>
				<a href="eliminar?codigo={{ animal.getCodigo() }}" class="btn btn-danger">Eliminar</a>
				<a href="modificar?codigo={{ animal.getCodigo() }}"class="btn btn-warning">Modificar</a>
			</td>
	</tr>
	{% endfor %}
</table>
<h4>{{ mensaje }}</h4>
{% endblock contenido %}