
{% extends 'base.html.twig' %}


{% block contenido %}

<div class="container" align="center">

	<h1 style="color: azure;">Modificar Usuario</h1>
	<br> <br> <br>

	<form action="actualizarUsuario" method="post">
		<input type="hidden" name="txtId" id="txtId"
			value="{{ usuario.getCodigo() }}" />
		<table class="table-primary">
			<tr>
				<td><label for="">Usuario</label></td>
				<td><input type="text" name="txtUser" id="txtUser"
					value="{{ usuario.getUser() }}" required="" /></td>
			</tr>
			<tr>
				<td><label for="">Password</label></td>
				<td><input type="password" name="txtPass" id="txtPass"
					value="{{ usuario.getPass() }}" required="" /></td>
			</tr>

			<tr>
				<td></td>
				<td><input type="submit" class="btn btn-primary"
					value="Modificar" /></td>
			</tr>
		</table>


	</form>

	<h4>
		{{ mensaje }}
	</h4>
</div>

{% endblock contenido %}